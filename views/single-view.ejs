<!DOCTYPE html>
<html lang="en">
  <%- include('partials/header') %>
  <head>
    <title>single view</title>
    <link rel="stylesheet" href="css/singleView.css" />
  </head>
<body>

  <%- include('partials/navbar') %>

<!-- Form to input query parameters -->
<form  action="/single-view" method="get">
  <label for="category">Enter Category:</label>
  <input type="text" id="category" name="category" required>

  <button type="submit">Get Job</button>
</form>


<div class="container">
  <h1>Registered clients</h1>

  <!-- Display document details if available -->
  <% if (blog && blog.length > 0) { %>
    <div class="blog-list">
      <% blog.forEach(blogg => { %>
        <div class="blog-details">
          <p><strong>Name:</strong> <%= blogg.name %></p>
          <p><strong>Email:</strong> <%= blogg.email %></p>
          <p><strong>Category:</strong> <%= blogg.category %></p>
          <p><strong>Description:</strong> <%= blogg.job_description %></p>

          <!-- Add other blog details as needed -->
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <p class="no-blog-message">No blog found.</p>
  <% } %>
    

    
  
</div>

  <%- include('partials/footer') %>



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous">
    // const noBlog = document.querySelector(".no-blog-message");
    // noBlog.innerHTML = "enter job category"
  </script>
  
</body>
</html>